<div class="text-start">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %><br />
      <%= f.email_field :email, class: 'form-control w-25', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: 'form-label' %><br />
      <%= f.password_field :password, class: 'form-control w-25', autocomplete: "current-password" %>
    </div>

    <div class="mb-3">
      <%= f.submit "Log in", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
